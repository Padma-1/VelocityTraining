<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.wipro.velocity.hibernatedemo.Employee" table = "Employee">
		<id name="empId" type ="java.lang.Long">
			<column name="EMPID" />
			<generator class = "identity" /> <!-- To automatically generates empId-->
		</id>
		<property name="firstName" type="java.lang.String">
			<column name="FIRSTNAME" />
		</property>
		<property name="lastName" type="java.lang.String">
			<column name="LASTNAME" />
		</property>	
	</class>
</hibernate-mapping>
